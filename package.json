{
  "name": "nlai-reply",
  "version": "1.0.0",
  "description": "MVP subscription-based YouTube comments reply service",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client\"",
    "client": "cd client && npm start",
    "server:dev": "nodemon --exec ts-node server.ts",
    "server": "ts-node server.ts",
    "build": "tsc && cd client && npm run build",
    "build:server": "tsc",
    "test": "jest",
    "test:setup": "ts-node scripts/test-setup.ts",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "seed": "ts-node scripts/seed.ts",
    "setup": "./setup.sh",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "youtube",
    "comments",
    "automation",
    "saas",
    "subscription"
  ],
  "author": "Ali Sohel <avesohel@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@pinecone-database/pinecone": "^1.1.2",
    "axios": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0-rc.12",
    "compression": "^1.7.4",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "cron": "^2.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "googleapis": "^126.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "natural": "^6.12.0",
    "node-html-parser": "^6.1.10",
    "nodemailer": "^6.9.4",
    "openai": "^4.20.1",
    "pinecone-client": "^1.1.0",
    "sentiment": "^5.0.2",
    "stripe": "^13.3.0",
    "tiktoken": "^1.0.10",
    "youtube-transcript": "^1.0.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/cron": "^2.0.1",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.3",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.6.0",
    "@types/nodemailer": "^7.0.2",
    "@types/sentiment": "^5.0.4",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.46.0",
    "jest": "^29.6.2",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
