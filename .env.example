# Server Configuration
PORT=8000
NODE_ENV=production

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nlai-reply

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:5000/auth/youtube/callback

# Facebook/Meta API (Configure after setting up Meta Business API)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:5000/auth/facebook/callback

# Pabbly Payments (Configure after setting up Pabbly account)
PABBLY_API_KEY=your-pabbly-api-key
PABBLY_WEBHOOK_SECRET=whsec_your-pabbly-webhook-secret
PABBLY_BASE_URL=https://payments.pabbly.com/api/v1

# Pabbly Product IDs (Create products in Pabbly dashboard and add IDs here)
PABBLY_BASIC_MONTHLY_PRODUCT_ID=prod_basic_monthly
PABBLY_BASIC_YEARLY_PRODUCT_ID=prod_basic_yearly
PABBLY_PRO_MONTHLY_PRODUCT_ID=prod_pro_monthly
PABBLY_PRO_YEARLY_PRODUCT_ID=prod_pro_yearly
PABBLY_ENTERPRISE_MONTHLY_PRODUCT_ID=prod_enterprise_monthly
PABBLY_ENTERPRISE_YEARLY_PRODUCT_ID=prod_enterprise_yearly

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Frontend URL
CLIENT_URL=https://your-frontend-domain.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=150

# Vector Database (Pinecone)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=youtube-transcripts

# AI Reply Settings
AI_REPLY_ENABLED=true
AI_REPLY_TONE=friendly
AI_SIMILARITY_THRESHOLD=0.8
AI_MAX_CONTEXT_LENGTH=2000